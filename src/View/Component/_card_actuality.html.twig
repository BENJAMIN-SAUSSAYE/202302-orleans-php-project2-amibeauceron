	<header>
		<h2>{{ actuality.title|title }}</h2>
	</header>
	<div class="news-content">
		{{ actuality.content|length > 150 ? actuality.content|slice(0, 150) ~ '...' : actuality.content }}
	</div>
	<footer>
		<div>
			<small>
				Date :
				<span>{{ actuality.creation_date|date("m/d/Y", "Europe/Paris")  }}</span>
			</small>
		</div>
		<div>
			<a href="/news/show?id={{ actuality.id }}" role="button" class="secondary">DÃ‰TAIL</a>
		</div>
	</footer>
</article>
