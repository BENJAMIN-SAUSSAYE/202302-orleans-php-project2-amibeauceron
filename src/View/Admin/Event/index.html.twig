{% extends 'admin.html.twig' %}
{% block title %}
	{{ parent() }}
	| Liste des évènements
{% endblock %}
{% block content %}
	<main>
		<div class="datas-container">
			<h1>Liste des évènements</h1>
			<div class="btn-container">
				<a class="secondary" role="button" href="/administration/evenements/ajouter">Ajouter</a>
			</div>
			<table role="grid">
				<thead>
					<tr>
						<th scope="col">Id</th>
						<th scope="col">Date</th>
						<th scope="col">Titre</th>
						<th scope="col"></th>
						<th scope="col"></th>
					</tr>
				</thead>
				<tbody>
					{% for event in events %}
						<tr>
							<td scope="row">{{ event.id }}</td>
							<td>{{ event.date | date("d/m/Y H:i:s", "Europe/Paris")}}</td>
							<td>{{ event.title }}</td>
							<td>
								<a href="/administration/evenements/supprimer"></a>
							</td>
							<td>
								<a href="/administration/evenements/modifier"></a>

							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</main>
{% endblock %}
